<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="../css/style.css">

{{!-- PHILS CODE --}}
<div class="uploading">
    <div class="bookmark-container container-fluid search-wrapper mt-3">
        <h2><b>{{username}}'s Recipes</b></h2>

        {{#unless uploadedRecipeArr}}
        <h2>You have not uploaded any recipes</h2>
        {{/unless}}

        {{#each uploadedRecipeArr}}

        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="row bookmark_card d-flex justify-content-center px-4 py-3">
                <div class="image-container">
                    <img class="img-fluid bookmark_image" src="{{this.image_path}}">

                </div>

                <div class="recipe-info text-center">
                    <p class="recipe-link">

                        <a href="../recipe/recipe_id={{this.id}}/api_id={{this.api_id}}">
                            {{math @index "+" 1}}. {{this.title}}
                        </a>
                    </p>

                    <div class="row d-flex justify-content-center">
                        <button id={{this.id}} class="btn btn-info upload-del-btn" data-recipeid={{this.id}}>
                            REMOVE</button>
                    </div>
                    {{!-- <p><b style="font-size: 15px">Description:</b><br><br> {{{this.summary}}}</p> --}}
                </div>

            </div>
        </div>
        {{/each}}

    </div>

</div>

{{!-- <div class="uploading"> --}}

    <div class="container">
        <div class="row flex-lg-nowrap">
            <div class="col mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="e-profile">
                            <div class="row">
                                <form action="/upload/upload-recipe" enctype="multipart/form-data" method="POST">
                                    <input type="file" id="fileid" name="recipeimageupload" accept="image/*">
                                    {{!-- <input class="recipe-upload-btn" type="submit" value="Upload">
                                    --}}
                                    <br />

                                    <br />
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <div>
                                                    <label>Title</label>
                                                </div>
                                                <textarea name="title" class="recipe-title-edit"
                                                    placeholder=""></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <div>
                                                    <label>Summary</label>
                                                </div>
                                                <textarea name="summary" class="recipe-summary-edit" rows="10" cols="50"
                                                    placeholder=""></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <div>
                                                    <label>Ingredients</label>
                                                </div>
                                                <textarea class="recipe-summary-edit" rows="10" cols="50"
                                                    placeholder=""></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <div>
                                                    <label>Instructions</label>
                                                </div>
                                                <textarea class="recipe-instructions-edit" name="instructions" rows="10"
                                                    cols="50" placeholder=""></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <div>
                                                    <label>Preparation time</label>
                                                </div>
                                                <input type="number" class="preptime" name="preparation_time" min="1"
                                                    max="120">
                                                minutes<br><br>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <div>
                                                    <label>Servings</label>
                                                </div>
                                                <input type="number" class="serving-quantity" name="servings" min="1"
                                                    max="10">
                                                people<br><br>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label>Difficulty</label>
                                                <select class="recipe-difficulty-edit js-states form-control"
                                                    name="difficulty" style="width: 20%" id="id_label_single">
                                                    <option>Easy</option>
                                                    <option>Medium</option>
                                                    <option>Hard</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col d-flex justify-content-end">
                                            <input class="recipe-upload-btn btn btn-outline-danger" type="submit"
                                                value="Upload">
                                            {{!-- <button type="button"
                                                class="reicpe-save-btn btn btn-primary btn btn-outline-warning"
                                                data-userid="{{userid}}">Save Changes</button> --}}
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!--
</div> --}}