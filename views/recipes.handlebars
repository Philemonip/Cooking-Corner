<div class="container-fluid info-container justify-content-center">
    <div class="row">
        <div class="image-container col">
             <h3>Title</h3>
             <p>{{title}}</p>
             <h4>By:</h4>
             <p>{{author}}</p>
            <img class="img-fluid" src="{{image_path}}">
        </div>
        <div class="function container col">
            <p>{{preparation_time}}</p>
            <p>{{servings}}</p>
              <br>
            <button type="button" class="bookmarks-btn btn btn-primary">Bookmark</button>
            <p>Ratings</p>
        </div>
    </div>
<section class="text-center">
  
        <div class="description container">
            <h3>Description</h3>
            <p>{{summary}}</p>
        </div>
        <div class="ingredients container">
            <h3>Ingredients</h3>
            <p>{{ingredients}}</p>
        </div>
        <div class="instructions container">
            <h3>Instructions</h3>
            <p>{{instructions}}</p>
        </div>
</section>
   <section class="text-center">
       <h3>Related</h3>
    <div class="row">
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    </div>

   </section>
</div>

