<div class="container-fluid info-container justify-content-center">
    <div class="row">
        <div class="image-container col">
            <h3>Title</h3>
            <p>{{title}}</p>
            <h4>By:</h4>
            <p>{{author}}</p>
            <img class="img-fluid" src="{{image}}">
        </div>
        <div class="function container col">
            <h4>Preparation Time:</h4>
            <p>{{time}} mins</p>
            <h4>Servings:</h4>
            <p>{{servings}}</p>
            <br>
            <h4>Score:</h4>
            <p>{{score}}</p>
            <button type="button" class="bookmark-btn btn btn-primary" name="add-bookmark">Bookmark</button>
        </div>
    </div>
    <section class="text-center">
        <div class="description container">
            <h3>Description</h3>
            <p>{{summary}}</p>
        </div>
        <div class="ingredients container">
            <h3>Ingredients</h3>
            {{#each ingredients}}
            <div>
                <p>{{this.amount}} {{this.unit}} {{this.nameClean}}</p>
            </div>
            {{/each}}
        </div>
        <div class="instructions container">
            <h3>Instructions</h3>
            {{#each instructions}}
            <p>{{math @index "+" 1}} {{this}}</p>
        </div>
        {{/each}}
    </section>

    <div class="container-fluid info-container flex-column d-flex justify-content-center">
        <div class="row">

            <div class="comment-container col-12">
                <div class="comment-title col-6 row">
                    <h2><b>Comments</b></h2>
                </div>
            </div>

            <div class="comment col-12">
                <div class="float-left">
                    <div class="review starrating risingstar d-flex justify-content-center flex-row-reverse col-12">
                        <input type="radio" id="star5" name="rating" value="5" /><label for="star5"
                            title="5 star"></label>
                        <input type="radio" id="star4" name="rating" value="4" /><label for="star4"
                            title="4 star"></label>
                        <input type="radio" id="star3" name="rating" value="3" /><label for="star3"
                            title="3 star"></label>
                        <input type="radio" id="star2" name="rating" value="2" /><label for="star2"
                            title="2 star"></label>
                        <input type="radio" id="star1" name="rating" value="1" /><label for="star1"
                            title="1 star"></label>
                    </div>
                </div>
            </div>

            <div class="review col-12">
                <form ref="note" id="note">

                    <div class="review col-12"><textarea class="note-area" cols="60" rows="10" name="note"
                            placeholder="Write your review or comment to the recipe here!"></textarea></div>
            </div>

            <div class="review col-12">
                <button id="post" type="button" class="btn btn-outline-warning">SUBMIT</button>
                </form>
            </div>

        </div>


        {{#each myReview}}
        <div class="my_review">
            <p>username:{{this.username}}</p>
            <p>rating:{{this.rating}}</p>
            <p class="display-area">comment:{{this.comment}}</p>
            <button class="edit-btn">Edit</button>
            <button class="del-btn">Delete</button>
        </div>
        {{/each}}

        {{#each recipeReview}}
        <div class="recipe_review">
            <p>username:{{this.username}}</p>
            <p>rating:{{this.rating}}</p>
            <p class="display-area">comment:{{this.comment}}</p>
        </div>
        {{/each}}

        <h3>Related</h3>
        <section class="text-center">
            <div class="row">
                <div class="col"></div>
                <div class="col"></div>
                <div class="col"></div>
            </div>
        </section>
    </div>