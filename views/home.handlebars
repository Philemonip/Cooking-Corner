<div class="container-fluid search">
  <div class="search-bar">
    <form class="d-flex justify-content-center">
      <input class="typeahead form-control me-2" type="search" placeholder="Search recipes" aria-label="Search">
    </form>
  </div>

  <section class="text-center">
    <h3>Top Rated Recipes</h3>
    <div class="row">

      {{#each info}}
      <div class="card col-lg-3 col-md-6 col-sm-12">
        <a href="../recipe/{{this.api_id}}">
          <img class="img-fluid" src="{{this.image_path}}">
        </a>
        <div class="container">
          <div class="row">
            <div class="col">
              <a href="../recipe/{{this.api_id}}">
                {{this.title}}
              </a>
              <div class="col">
                {{this.rating}}
              </div>
            </div>
            <div class="col">
              <button type="button" class="bookmark-btn btn btn-primary" name="add-bookmark">Bookmark</button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </section>
</div>